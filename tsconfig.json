{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true, // Allow default imports from non-ES modules
    "allowSyntheticDefaultImports": true, // Allow default imports even from non-ESM modules
    "outDir": "./out",
    "lib": [
      "es2019"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
  ],
  "include": [
    "src/**/*.ts"
  ]
}
